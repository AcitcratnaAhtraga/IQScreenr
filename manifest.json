{
  "manifest_version": 3,
  "name": "Tweet Verbal IQ Analyzer",
  "version": "1.0.0",
  "description": "Analyzes tweet text and displays estimated verbal IQ scores with color-coded badges",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://*.twitter.com/*",
    "https://*.x.com/*",
    "https://cdn.jsdelivr.net/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.twitter.com/*",
        "https://*.x.com/*"
      ],
      "js": [
        "content/core/dependencyParser.js",
        "content/core/iqEstimator.js",
        "content/utils/cache.js",
        "content/utils/domHelpers.js",
        "content/utils/textExtraction.js",
        "content/utils/tweetDetection.js",
        "content/features/settings.js",
        "content/features/badge.js",
        "content/features/tweetProcessor.js",
        "content/features/realtime.js",
        "content/content.js"
      ],
      "css": [
        "styles/badge.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "content/data/aoa_dictionary.json",
        "content/data/dependency_depth_calibration.json"
      ],
      "matches": [
        "https://*.twitter.com/*",
        "https://*.x.com/*"
      ]
    }
  ]
}

